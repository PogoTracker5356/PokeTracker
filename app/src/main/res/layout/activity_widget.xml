<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/w_widget"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00d2d2"
    android:gravity="center_vertical|center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0"
        android:id="@+id/w_id"
        android:visibility="invisible" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/pk_despawn"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/w_icon"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12m"
        android:id="@+id/w_distance"
        android:textSize="16dp"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="E"
        android:id="@+id/w_direction"
        android:layout_below="@+id/w_distance"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tap to Update"
        android:id="@+id/w_feedback"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/w_direction"
        android:textSize="8dp"
        android:textColor="#000000" />
</RelativeLayout>